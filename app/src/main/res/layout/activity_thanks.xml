<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="id.trafood.trafood.ThanksActivity"
    android:background="@color/white">
    <LinearLayout
        android:layout_margin="@dimen/margin_activity"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_margin="30dp"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textColor="@color/colorPrimary"
            android:text="Terimakasih, mohon tunggu... pesenanan kamu sedang dalam proses. silakan cek menu status pengiriman untuk melihat status pemesanan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button

            android:text="Siap"
            android:layout_marginTop="30dp"
            android:id="@+id/btnOke"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
