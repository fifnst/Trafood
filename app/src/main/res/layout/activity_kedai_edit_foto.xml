<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="id.trafood.trafood.KedaiEditFotoActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/ivFotoKedaiEdit"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="200dp" />
        <Button
            android:layout_marginBottom="@dimen/margin_activity"
            android:layout_alignParentBottom="true"
            android:id="@+id/btnSaveEditFotoKedai"
            android:text="SAVE"
            android:textColor="@color/white"
            android:background="@drawable/bg_rectangle_button"
            android:layout_marginRight="@dimen/margin_activity"
            android:layout_marginLeft="@dimen/margin_activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
