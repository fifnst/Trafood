<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="id.trafood.trafood.LoginActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">
            <ImageView
                android:layout_centerInParent="true"
                android:src="@drawable/logofont"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginBottom="@dimen/margin_activity"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="24sp"
                android:textColor="@color/green"
                android:fontFamily="sans-serif"
                android:text="@string/login"/>

            <EditText
                android:id="@+id/etEmail"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:textColorHint="@color/grey"
                android:padding="8dp"
                android:background="@drawable/bg_rectangle_edittext"
                android:textColor="@color/green"/>

            <EditText
                android:id="@+id/etPassword"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:textColorHint="@color/grey"
                android:inputType="textPassword"
                android:padding="8dp"
                android:background="@drawable/bg_rectangle_edittext"
                android:textColor="@color/green" />

            <Button
                android:layout_marginTop="@dimen/margin_activity"
                android:textColor="@color/white"
                android:background="@drawable/bg_rectangle_button"
                android:text="@string/login"
                android:id="@+id/btnLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/margin_activity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView

                    android:text="@string/lupasadi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textStyle="bold"
                    android:layout_marginLeft="2dp"
                    android:textColor="@color/radablack"
                    android:text="@string/pulihkan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

                    <TextView
                        android:textAlignment="center"
                        android:layout_margin="@dimen/margin_activity"
                        android:text="@string/atau"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />


            <Button
                android:text="@string/loginfb"
                android:textColor="@color/white"
                android:background="@color/blue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <View
                android:layout_marginTop="@dimen/margin_activity"
                android:background="@color/grey"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <LinearLayout
                android:layout_marginTop="@dimen/margin_activity"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="@string/tidakpunyaakun"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textStyle="bold"
                    android:layout_marginLeft="2dp"
                    android:textColor="@color/radablack"
                    android:text="@string/buatakun"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>



        </LinearLayout>
    </ScrollView>


</RelativeLayout>
