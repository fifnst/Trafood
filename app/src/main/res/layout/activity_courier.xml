<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="id.trafood.trafood.CourierActivity">
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/cloud"/>
    <LinearLayout
        android:layout_marginRight="@dimen/margin_activity"
        android:layout_marginLeft="@dimen/margin_activity"
        android:orientation="vertical"
        android:id="@+id/LnTidakAdaKurir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tvPengumumanKurir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/LnAdaKurir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/radablack"
            android:textSize="15dp"
            android:textAlignment="center"
            android:text="Silakan Pilih Kurir"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvKurir"
            android:layout_margin="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
