<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@color/white"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/jarak_antar_gridview">
        <ImageView
            android:id="@+id/ivArticle"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher"
            android:layout_marginTop="@dimen/margin_rm"
            android:layout_marginRight="@dimen/margin_rm"
            android:layout_marginLeft="@dimen/margin_rm"/>
        <TextView
            android:layout_marginLeft="@dimen/margin_rm"
            android:layout_marginRight="@dimen/margin_rm"
            android:textColor="@color/radablack"
            android:textSize="@dimen/font_namerm_size"
            android:id="@+id/tvTitleArticle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginLeft="@dimen/margin_rm"
            android:layout_marginRight="@dimen/margin_rm"
            android:textColor="@color/blue"
            android:id="@+id/tvCategoryArticle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="10dp"
            android:textSize="@dimen/font_alamat_size"
            android:layout_marginLeft="@dimen/margin_rm"
            android:id="@+id/tvWriterArticle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

</LinearLayout>